{
  "name": "alexcuadra/chat-for-n8n",
  "description": "WordPress plugin to integrate n8n Chat Widget",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Alex Cuadra",
      "homepage": "https://alexcuadra.dev"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  },
  "scripts": {
    "lint:wpcs": "phpcs --standard=WordPress --extensions=php --ignore=*/node_modules/*,*/vendor/*,*/dist/* .",
    "lint:php": "php -l chat-for-n8n.php && find includes -name '*.php' -exec php -l {} \\;",
    "format": "phpcbf --standard=WordPress --extensions=php --ignore=*/node_modules/*,*/vendor/*,*/dist/* .",
    "post-install-cmd": [
      "@php vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/phpcompatibility-wp"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}

