{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": "off",
		"no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
	},
	"globals": {
		"window": "readonly",
		"document": "readonly",
		"createChat": "readonly"
	}
}

